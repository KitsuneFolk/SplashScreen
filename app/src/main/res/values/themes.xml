<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground" tools:targetApi="s">#3F48CC</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="BlueTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:colorBackground">@color/BlueTheme_colorBackground</item>
        <item name="colorPrimary">@color/BlueTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/BlueTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/BlueTheme_colorAccent</item>
        <item name="android:textColorSecondary">@color/BlueTheme_textColorSecondary</item>
    </style>

</resources>